\mode<presentation>

%
% Requirements

% 
% defining custom variables for department, laboratory, research group
% and logos
\def\department#1{\gdef\@department{#1}}
\def\laboratory#1{\gdef\@laboratory{#1}}
\def\group#1{\gdef\@group{#1}}
\def\institutelogo#1{\gdef\@institutelogo{#1}}
\def\lablogo#1{\gdef\@lablogo{#1}}

%
% Settings:
% enziteto uses its own inner and outer theme
% plus the gallinule color theme (for the lacam lilac variations)
% and the Open Sans font
\useinnertheme{enziteto}
\useoutertheme{enziteto}
\usecolortheme{gallinule}
\usefonttheme{openfonts}

%
% uncomment these usepackage directives for loading from local
% \usepackage{enzitetotheme/beamerinnerthemeenziteto}
% \usepackage{enzitetotheme/beamerouterthemeenziteto}
% \usepackage{enzitetotheme/beamercolorthemegallinule}
% \usepackage{enzitetotheme/beamerfontthemeopenfonts}



%
% disabling navigation symbols
\setbeamertemplate{navigation symbols}{}

%
% setting the borders for the blocks
\setbeamertemplate{blocks}[rounded][shadow=false]

%
% setting spacing in header and footer
\setbeamertemplate{section in head/foot shaded}[default][15]
\setbeamertemplate{mini frame in other subsection}[default][15]

%
% nice big margins
\setbeamersize{text margin left=35pt}
\setbeamersize{text margin right=35pt}


\mode<all>